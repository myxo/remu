[Unit]
Description=Remu Telegram reminder bot
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=remu
Group=remu
WorkingDirectory=/var/lib/remu
EnvironmentFile=-/etc/remu/remu.env
ExecStart=/usr/bin/remu
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
